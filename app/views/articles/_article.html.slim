= content_for :title, article.title
= cache article do
  .article-logo
    - if article.image_link.present?
      img src=article.image_link loading="lazy" title=article.title
  .vw-article-body
    .vw-article-header
      .vw-tags
        - @article.tags.each do |tag|
          a.tag-items href=article_tag_path(tag.name) title=tag.name
            = tag.name
      .vw-article-title = article.title
      <hr>
      .vw-article-meta
        .vw-bar__placeholder
          = render 'users/avatar', user: article.user
          time 
            = datetime_str(publish_at)
            |  |
    .vw-article-content
      = raw body
